{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/financial/**",
        "function": "financialApi"
      },
      {
        "source": "/api/financial/**",
        "function": "financialApi"
      },
      {
        "source": "/finance/**",
        "function": "financialApi"
      },
      {
        "source": "/revenue/**",
        "function": "financialApi"
      },
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/auth/**",
        "function": "login"
      },
      {
        "source": "/agents/payments/**",
        "function": "getAgentPaymentSummary"
      },
      {
        "source": "/commission/calculate",
        "function": "calculateCommissionCallable"
      },
      {
        "source": "/health",
        "function": "simpleHealth"
      },
      {
        "source": "/unified/**",
        "function": "unifiedApi"
      },
      {
        "source": "/debug",
        "function": "debugBackend"
      },
      {
        "source": "/working",
        "function": "working"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET, POST, PUT, DELETE, OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type, Authorization"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  }
}